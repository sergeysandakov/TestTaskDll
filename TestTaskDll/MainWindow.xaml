<Window x:Class="TestTaskDll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskDll"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="800" Width="1000">
    <Grid x:Name="MainRoot" Background="#ffdadada">
        <Border MinWidth="400" Margin="15" Background="white" VerticalAlignment="Center" Padding="20" MaxWidth="800" CornerRadius="20">
            <StackPanel>
                <TextBlock Text="Public and protected method names" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" />
                <TextBox x:Name="textBox_1" materialDesign:HintAssist.Hint="Path" FontSize="20" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <DataGrid x:Name="dg" Height="400" Margin="0 20" FontSize="15">
                    
                </DataGrid>
                <Button Content="Show methods" Margin="0 20" Height="40" FontSize="20" Click="Button_Click"/>
                <DataGrid Height="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
